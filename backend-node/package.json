{
  "name": "personalab-pro-backend",
  "version": "1.0.0",
  "description": "PersonaLab Pro SaaS Backend - AI-powered persona generation",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "docs": "ts-node src/docs-server.ts",
    "docs:build": "tsc src/docs-server.ts --outDir dist --target es2020 --module commonjs --moduleResolution node",
    "docs:serve": "node dist/docs-server.js",
    "docs:test": "node scripts/test-api-docs.js",
    "docs:validate": "swagger-cli validate api/docs/openapi.json || (npm run docs:extract && swagger-cli validate openapi.json)",
    "docs:extract": "curl -s http://localhost:3005/api/docs/openapi.json > openapi.json",
    "docs:static": "redoc-cli build openapi.json --output docs/static/index.html",
    "docs:all": "npm run docs:test && npm run docs:validate && npm run docs:static",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.10.0",
    "@prisma/client": "^5.7.1",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "stripe": "^14.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
